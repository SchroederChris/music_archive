<h1><%= t('.pieces') %></h1>

<%= form_tag pieces_path, :method => 'get' do %>  
  <p>  
    <%= text_field_tag :search, params[:search] %>  
    <%= submit_tag t('.search'), :name => nil %>  
  </p>  
<% end %>  

<table>
  <tr>
    <th><%= t('.title') %></th>
    <th><%= t('.composer') %></th>
    <th><%= t('.drawer') %></th>
    <th><%= t('.number') %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pieces.each do |piece| %>
  <tr>
    <td><%= piece.title %></td>
    <td><%= piece.composer %></td>
    <td><%= piece.drawer %></td>
    <td><%= piece.number %></td>
    <td><%= link_to t('.show_piece'), piece %></td>
    <td><%= link_to t('.edit_piece'), edit_piece_path(piece) %></td>
    <td><%= link_to t('.destroy_piece'), piece, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to t('.new_piece'), new_piece_path %>
<p><%= will_paginate @pieces %></p>
